{
    // -------------------------------------
    // Window Settings
    // These settings adjust the appearance and behavior of the window, including title bar, window buttons, etc.
    // -------------------------------------

    // General
    "window.commandCenter": true,
    "window.menuBarVisibility": "compact",
    
    
    // -------------------------------------
    // Workbench Settings
    // These settings adjust the appearance and behavior of the overall workbench, including themes, startup editor, activity bar location, etc.
    // -------------------------------------

    // Theme
    "workbench.iconTheme": "file-icons",
    "workbench.colorTheme": "Vitesse Dark",
    "workbench.productIconTheme": "fluent-icons",

    // General
    "workbench.tree.indent": 16,
    "workbench.startupEditor": "readme",
    "workbench.editor.showTabs": "single",
    "workbench.activityBar.location": "bottom",
    "workbench.list.smoothScrolling": true,
    "workbench.layoutControl.enabled": false,
    "workbench.tree.enableStickyScroll": true,

    // Customization
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#00EE00",
        "editor.lineHighlightBackground": "#303030"
    },


    // -------------------------------------
    // Editor Settings
    // These settings control the behavior and appearance of the editor window where you write your code.
    // -------------------------------------

    // Font
    "editor.fontSize": 16,
    "editor.suggestFontSize": 16,
    "editor.codeLensFontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "editor.fontFamily": "'Cascadia Code', 'HarmonyOS Sans SC', 'OPlusSans 3.0', 'Segoe UI Emoji'",
    "editor.codeLensFontFamily": "'Cascadia Code', 'HarmonyOS Sans SC', 'OPlusSans 3.0', 'Segoe UI Emoji'",

    // General
    // "editor.lineNumbers": "on",
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": true,
    "editor.inlayHints.enabled": "onUnlessPressed",
    "editor.cursorSmoothCaretAnimation": "on",

    // Language specific settings for Python
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },


    // -------------------------------------
    // Terminal Settings
    // These settings are specific to the integrated terminal in VSCode.
    // -------------------------------------

    // Font
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font Propo', 'HarmonyOS Sans SC', 'OPlusSans 3.0', 'Segoe UI Emoji'",

    // General
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.stickyScroll.enabled": false,


    // -------------------------------------
    // LSP Plugin Settings
    // Specifically refers to programming language related plug-ins LSP configurations, etc.
    // -------------------------------------

    // Python
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.functionReturnTypes": true,


    // -------------------------------------
    // Audio Sgnals Settings
    // Settings related to audio feedback for certain actions in VSCode.
    // -------------------------------------

    "accessibility.signals.clear": {
        "sound": "on"
    },
    "accessibility.signals.save": {
        "sound": "always"
    },
    "accessibility.signals.format": {
        "sound": "always"
    },


