    // -------------------------------------
    // Sundry Settings
    // Fragmented and unorganized settings
    // -------------------------------------
    
    "scm.inputFontSize": 14,
    "diffEditor.codeLens": true,
    "gitlens.ai.experimental.provider": "anthropic",
    "gitlens.ai.experimental.anthropic.model": "claude-2.1",


    // -------------------------------------
    // Vim Config
    // Vs Code Vim Plugin Config
    // -------------------------------------

    "vim.useSystemClipboard": true,
    "extensions.experimental.affinity": {"vscodevim.vim": 1},
    "vim.leader": "<space>",
    "vim.surround": true,
    "vim.easymotion": true,
    "vim.highlightedyank.enable": true,
    "vim.smartRelativeLine": true,
    "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
    "vim.highlightedyank.duration": 200,
    "vim.sneak": true,
    "vim.normalModeKeyBindings": [
        // 关闭当前 buffer
        {
            "before": ["leader", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        // 关闭所有 buffer
        {
            "before": ["leader", "leader", "w"],
            "commands": ["workbench.action.closeAllEditors"]
        },
        // 格式化文档 leader f(ormat) d(ocument)
        {
            "before": ["leader", "f", "d"],
            "commands": ["editor.action.formatDocument"],
            "when": ["editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"]
        },
        // 格式化导入 leader f(ormat) i(mports)
        {
            "before": ["leader", "f", "i"],
            "commands": ["editor.action.organizeImports"],
            "when": ["textInputFocus && !editorReadonly && supportedCodeAction =~ /(\\s|^)source\\.organizeImports\\b/"]
        },
        // 重命名符号 leader leader r(ename)
        {
            "before": ["leader", "leader", "r"],
            "commands": ["editor.action.rename"],
            "when": ["editorHasRenameProvider && editorTextFocus && !editorReadonly"]
        },
        // 折叠全部 leader f(old) a(ll)
        {
            "before": ["leader", "f", "a"],
            "commands": ["editor.foldAll"],
            "when": ["editorTextFocus && foldingEnabled"]
        },
        // 展开全部 leader u(n) f(old) a(ll)
        {
            "before": ["leader", "u", "f", "a"],
            "commands": ["editor.unfoldAll"],
            "when": ["editorTextFocus && foldingEnabled"]
        },
        // 切换侧边栏可见性
        {
            "before": ["leader", "e"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        // 快速全局搜索
        {
            "before": ["leader", "s", "t"],
            "commands": ["workbench.action.experimental.quickTextSearch"],
            "when": ["!accessibilityHelpIsShown && !accessibleViewIsShown"]
        },
        // 快速全局搜索符号
        {
            "before": ["leader", "s", "s"],
            "commands": ["workbench.action.gotoSymbol"],
            "when": ["!accessibilityHelpIsShown && !accessibleViewIsShown"]
        }
    ],
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-v>": false,
        "<C-z>": false,
        "<C-s>": false,
        "<C-j>": false,
        "<C-p>": false,
        "<C-k>": false,
        "<C-/>": false,
        "<C-f>": false,
        "<C-x>": false,
        "<C-a>": false,
    }
}
